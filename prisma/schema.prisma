generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Url {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  original_url    String
  short_url       String   @unique
  created_at      DateTime @default(now())
  clicks          Int      @default(0)

  @@map("urls")
}